# Portfolio Rebalancer Environment Configuration
# Copy this file to .env and update the values

# ============================================================================
# CONFIGURATION - Essential settings that 90% of users need to configure
# ============================================================================

# Application Security
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY
FLASK_ENV=production

# Backup Settings [[memory:7528819]]
MAX_BACKUP_FILES=10
BACKUP_INTERVAL_HOURS=6

# ============================================================================
# DIRECTORIES - File system paths for data storage
# ============================================================================

# Base directory for application data (default: instance)
# The database will be stored as: {APP_DATA_DIR}/portfolio.db
APP_DATA_DIR=instance

# Directory for database backups (default: {APP_DATA_DIR}/backups)
DB_BACKUP_DIR=instance/backups

# Directory for file uploads (default: app/uploads)
UPLOAD_FOLDER=app/uploads

# ============================================================================
# GEEKZONE - Advanced settings for power users and fine-tuning
# ============================================================================

# Performance & Caching
CACHE_DEFAULT_TIMEOUT=300               # Cache timeout in seconds (5 minutes)
PRICE_UPDATE_INTERVAL_HOURS=24          # Price update interval in hours
BATCH_SIZE=5                            # Number of tickers to fetch in a batch
PER_PAGE=20                             # Items per page in pagination

# File Handling
MAX_CONTENT_LENGTH=16777216             # Max file upload size in bytes (16MB)

# Session Management
SESSION_LIFETIME_DAYS=1                 # Session lifetime in days

# Development & Debugging (uncomment as needed)
# SQLALCHEMY_ECHO=true                  # Enable SQL query logging
# SESSION_COOKIE_SECURE=false           # Allow HTTP cookies (dev only) 