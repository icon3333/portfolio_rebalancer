# Portfolio Rebalancer Environment Configuration
# Copy this file to .env and update the values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Flask Configuration
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY
DATABASE_URL=sqlite:///instance/portfolio.db
FLASK_ENV=production

# ============================================================================
# DATABASE & BACKUP SETTINGS
# ============================================================================

# Maximum number of backup files to keep (default: 10)
MAX_BACKUP_FILES=10

# Automatic backup interval in hours (default: 6)
BACKUP_INTERVAL_HOURS=24

# Directory for database backups (default: instance/backups)
DB_BACKUP_DIR=instance/backups

# ============================================================================
# APPLICATION PERFORMANCE SETTINGS
# ============================================================================

# Cache timeout in seconds (default: 300 = 5 minutes)
CACHE_DEFAULT_TIMEOUT=300

# Price update interval in hours (default: 24)
PRICE_UPDATE_INTERVAL_HOURS=24

# Number of tickers to fetch in a batch (default: 5)
BATCH_SIZE=5

# Number of items to show per page in pagination (default: 20)
PER_PAGE=20

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================

# Maximum file upload size in bytes (default: 16777216 = 16MB)
MAX_CONTENT_LENGTH=16777216

# Directory for file uploads (default: app/uploads)
UPLOAD_FOLDER=app/uploads

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

# Session lifetime in days (default: 1)
SESSION_LIFETIME_DAYS=1

# ============================================================================
# OPTIONAL DEVELOPMENT SETTINGS
# ============================================================================

# Uncomment for development debugging
# SQLALCHEMY_ECHO=true

# Uncomment to override security settings for local development
# SESSION_COOKIE_SECURE=false 